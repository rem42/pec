<!DOCTYPE pdf SYSTEM "%resources%/dtd/doctype.dtd">
<pdf>
    <dynamic-page>
        <div>
            <p><h1>Liste des comp√©tences de {{ user.name }} {{ user.surname }}</h1></p>

            <ul>
                {% set previous_cat = '' %}
                {% for userSkillCategory in userSkillsCategories %}
                    {% if previous_cat != userSkillCategory.sc_name %}
